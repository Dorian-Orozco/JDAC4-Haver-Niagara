@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}

@* @{
    ViewData["Title"] = "Log in";
} *@

<style>
    .testimg {
        background: url(../../../../wwwroot/images/HB_Dachma_neg_mono.png);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .login-container {
        border: 2px solid #0C2340;
        border-radius: 20px;
        padding: 40px 30px;
        border-radius: 20px;
    }

    .report-container {
        padding: 40px 30px;
        border-radius: 20px;
    }

    /*NCR log border*/
    .list-container {
        border: 2px solid #0C2340;
        border-radius: 20px;
        margin-top: 90px;
    }

</style>

@* <h1>@ViewData["Title"]</h1> *@
<div class="login-container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            @* <h1>Login</h1> *@
            <img src="~/images/logo.png" alt="Haver_Niagara Logo" asp-append-version="true" class="img-fluid" />

            <section>
                <form id="account" method="post">
                    @*   <h2>username: admin@outlook.com</h2>
                    <h2>password: password</h2> *@
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
  @*                       <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p> *@
                        <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p> 
                  
                    </div>
                </form>
            </section>
        </div>
        <button id="autoAdminLogin" class="btn btn-primary">Admin Login</button>
        <button id="autoQualityRepLogin" class="btn btn-primary">Quality Rep Login</button>
        <button id="autoEngineerLogin" class="btn btn-primary">Engineer Login</button>
        <button id="autoOperationLogin" class="btn btn-primary">Operations Login</button>
        <button id="autoProcurementLogin" class="btn btn-primary">Procurement Login</button>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    //created a script for login. the pain and agony of typing in login credentials got to me. -dorian

    //Finds button by their ID's and has attached event listeners - when clicked, go to a function with login credentials and signs 
    document.getElementById("autoAdminLogin").addEventListener("click", function () {
        determineLogin("admin@outlook.com", "password");
    });
    document.getElementById("autoQualityRepLogin").addEventListener("click", function () {
        determineLogin("qualityrepresentative@outlook.com", "password");
    });
    document.getElementById("autoEngineerLogin").addEventListener("click", function () {
        determineLogin("engineer@outlook.com", "password");
    });
    document.getElementById("autoOperationLogin").addEventListener("click", function () {
        determineLogin("operations@outlook.com", "password");
    });
    document.getElementById("autoProcurementLogin").addEventListener("click", function () {
        determineLogin("procurement@outlook.com", "password");
    });

    function determineLogin(email, password) {
        var Email = document.getElementById("Input_Email");
        var Password = document.getElementById("Input_Password");

        //Insert The Infooo
        Email.value = email;
        Password.value = password;

        //login / submit the form
        document.getElementById("account").submit();
    }
</script>
