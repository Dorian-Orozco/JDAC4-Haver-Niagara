
@model IEnumerable<Haver_Niagara.Models.NCR>

﻿@{
    ViewData["Title"] = "Home Page";
}

<style>
    h1 {
        font-weight: 600;
        font-size: 38px;
    }

    h2 {
        font-weight: 600;
        font-size: 20px;
    }

    h3 {
        font-weight:600;
        font-size: 100px;
    }

    .body {
        font-family: Montserrat, sans-serif;
        color: #1C335E;
    }

    .dashboard-container {
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #E7E7E7;
        border-radius: 10px;
    }

    .dashboard-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .page-title {
        flex-basis: 50%;
        text-align: left;
    }

    .filter-container {
        display: flex;
        flex-direction: column;
        margin-right: 1rem;
    }

    .search-button {
        flex-basis: 20%;
        border: none;
        border-radius: 5px;
        align-self: flex-end;
        color: white;
        background-color: #4FC0FF;
        width: 138px;
        height: 45px;
    }

    .card {
        flex-basis: 32%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        padding: 1rem;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .wide-card {
        flex-basis: 100%;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,p,0,0.1);
        padding: 1rem;
    }
</style>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<div class="dashboard-container">
    <div class="dashboard-row">
        <h1 class="page-title">NCR Dashboard</h1>
    </div>

    <div class="dashboard-row">
        <div class="filter-container">
            <label for="dateFilter">Week Dates:</label>
            <input type="week" id="dateFilter">
        </div>

        <div class="filter-container">
            <label for="status">Status:</label>
            <select id="status">
                <option value="all">All</option>
                <option value="option1">Open</option>
                <option value="option2">Closed</option>
            </select>
        </div>

        <div class="filter-container">
            <label for="awaitDept">Awaiting Department:</label>
            <select id="awaitDept">
                <option value="all">All</option>
                <option value="option1">Quality</option>
                <option value="option2">Engineering</option>
                <option value="option3">Purchasing</option>
            </select>
        </div>

        <button class="search-button">Search</button>
    </div>

    <div class="dashboard-row">
        <div class="card">
            <div class="card-content">
                <h2>Total Open NCR's</h2>
                <h3>20</h3>
                <p>In the last month</p>
            </div>
        </div>

        <div class="card">
            <div class="card-content">
                <h2>Total Closed NCR's</h2>
                <h3>12</h3>
                <p>In the last month</p>
            </div>
        </div>

        <div class="card">
            <div class="card-content">
                <h2>NCR's Awaiting Decision</h2>
                <h3>2</h3>
                <p>Currently</p>
            </div>
        </div>
    </div>

    <div class="dashboard-row">
        <div class="wide-card">
            <h2>Preview of Open NCR's</h2>
            <table>
                <thead>
                    <tr>
                        <th>Col 1</th>
                        <th>Col 2</th>
                        <th>Col 3</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>Row 1, Col 1</td>
                        <td>Row 1, Col 2</td>
                        <td>Row 1, Col 3</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

