        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Purchasing)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Purchasing.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Engineering)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Engineering.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Medias)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Product.Medias.Any())
            {
                foreach (var image in Model.Product.Medias)
                {
                    <img src="data:@image.MimeType;base64,@Convert.ToBase64String(image.Content)" alt="@image.Description" width="300" height="300" />
                }
            }
            else
            {
                <text>No Images</text>
            }
        </dd>

    </dl>
