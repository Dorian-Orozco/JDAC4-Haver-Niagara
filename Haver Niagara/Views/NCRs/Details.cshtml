            @Html.DisplayFor(model => model.NCR_Number)
        </dd>
    </dl>
    @* <hr /> *@
    <dl class="row">

        @* Quality Inspector Section *@
        <div class="mb-3 border border-secondary rounded fs-5">Quality Inspector</div>
      
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Product.Supplier)
        </dt>
        <dd class="col-sm-9">
            @* Hard-coded value *@
            Lawrence Sintered Metals
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Product.ProductNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.ProductNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.SalesOrder)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SalesOrder)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Product.QuantityRecieved)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.QuantityRecieved)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Product.QuantityDefect)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.QuantityDefect)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-3 mb-2">
            Problem Found
        </dt>
        <dd class="col-sm-9">
            @if (Model.Product != null && Model.Product.DefectLists != null)
            {
                @foreach (var defectL in Model.Product.DefectLists)
                {
                    @defectL.Defect.Description;
                }
            }
        </dd>

        <dt class="col-sm-3">
            @* Hard-coded value *@
            Images
        </dt>
        <dd class="col-sm-9">

            @if (Model.Product != null && Model.Product.Medias != null && Model.Product.Medias.Any())
            {
                foreach (var image in Model.Product.Medias)
                {
                    <img src="data:@image.MimeType;base64,@Convert.ToBase64String(image.Content)" alt="@image.Description" width="300" height="300" />
                }
            }
            else
            {
                <text>No Images</text>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.QualSignature)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.QualSignature)
        </dd>
