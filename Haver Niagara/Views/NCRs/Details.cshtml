        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NCRClosed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NCRClosed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QualSignature)
        </dt>
